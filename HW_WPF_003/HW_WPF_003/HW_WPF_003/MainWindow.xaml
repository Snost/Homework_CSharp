<Window x:Class="HW_WPF_003.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HW_WPF_003"
        mc:Ignorable="d"
        Title="My Teams" Height="550" Width="900">
    <DockPanel LastChildFill="True">
        <Grid Background="Black"
               DockPanel.Dock="Top">
            <Border Background="#FF353131"
                    Margin="10"
                    MaxWidth="300"
                    Padding="4" 
                    CornerRadius="10">
                <TextBox
                     FontSize="18"
                     Foreground="White"
                     BorderThickness="0"
                     Background="#FF353131"/>
            </Border>
        </Grid>

        <Label Content="Menu"
               Background="Black"
               Foreground="White"
               DockPanel.Dock="Left"/>

        <Grid  Background="#FF353131"
               DockPanel.Dock="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="120"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="1"
                    Background="Red"
                    Margin="10"
                    CornerRadius="4"
                    MinHeight="30"
                    MinWidth="90"
                    MouseEnter="Border_MouseEnter"
                    MouseLeave="Border_MouseLeave"
                    MouseLeftButtonDown="Border_MouseLeftButtonDown">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="30"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Image Source="https://i.pinimg.com/originals/d4/af/7e/d4af7e27876cab3a9616bc9aabb0a193.jpg"
                           Height="25"
                           Stretch="Fill"/>
                    <TextBlock Text="Exit"
                               Grid.Column="1"
                               TextAlignment="Center"
                               VerticalAlignment="Center"
                               FontWeight="DemiBold"
                              
                               Foreground="White"
                               />
                </Grid>
            </Border>
        </Grid>

        <Grid 
               Background="#FF1D1B1B"
               Width="250"
               DockPanel.Dock="Right">
            <Grid.RowDefinitions>
                <RowDefinition Height ="50"/>
                <RowDefinition/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            <TextBlock Text="Chat"
                       TextAlignment="Center"
                       Foreground="White"
                       VerticalAlignment="Center"
                       FontSize="20"/>
