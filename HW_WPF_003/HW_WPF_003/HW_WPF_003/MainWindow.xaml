                Grid.Row="1"
                 Background="#FF353131"
             Margin="5"
             Padding="5"
             CornerRadius="4 4 4 0"
             MaxWidth="200">
                        <TextBlock  Text="Message"
                 TextWrapping="WrapWithOverflow"
                 TextAlignment="Justify"
                 Foreground="White"
                 Margin="10 0 0 0"/>

                    </Border>
