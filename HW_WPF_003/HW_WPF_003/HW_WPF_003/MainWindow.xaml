                    </Border>
                </Grid>
            </ListBox>
            <Border Background="#FF353131"
                    Margin="10"
                    MaxWidth="300"
                    Padding="4" 
                    CornerRadius="10"
                    Grid.Row="2">
                <TextBox FontSize="18"
                         Foreground="White"
                         BorderThickness="0"
                         Background="#FF353131"/>
            </Border>
        </Grid>
        
