                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Column="1"
                               Grid.Row="0"
                               Text="LastName Name MiddleName 20:10"
                               FontSize="9"
                               Foreground="#FF939292"/>
                    <Border Grid.Column="1"
                               Grid.Row="1"
                                Background="#FF353131"
                            Margin="5"
                            Padding="5"
                            CornerRadius="4 4 4 0"
                            MaxWidth="200">
                    <TextBlock  Text="Message"
                                TextWrapping="WrapWithOverflow"
                                TextAlignment="Justify"
                                Foreground="White"
                                Margin="10 0 0 0"/>
                       
                    </Border>
                    <Border Grid.Column="0"
                            Grid.Row="1"
                            Width="25"
                            Height="25"
                           
                            CornerRadius="90"
                            VerticalAlignment="Top"
                            Margin="0 5 -15 0"
                            BorderThickness="2"
                            BorderBrush="White">
                        <Border.Background>
                            <ImageBrush ImageSource="https://media.springernature.com/lw703/springer-static/image/art%3A10.1038%2F540500a/MediaObjects/41586_2016_Article_BF540500a_Figi_HTML.jpg?as=webp" />
                        </Border.Background>

                    </Border>
                </Grid>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
